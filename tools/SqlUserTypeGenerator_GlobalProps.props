<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="NewTarget" BeforeTargets="Build">
		<PropertyGroup>
			<!-- custom output folder for sql types generated by  SqlUserTypeGenerator -->
			<SqlUserTypeGenerator_TargetFolder>$(ProjectDir)..\DbMigrations\$(ProjectName)\</SqlUserTypeGenerator_TargetFolder>
			<!-- custom type pre-create code -->
			<SqlUserTypeGenerator_TypePreCreateCode>
<![CDATA[
if type_id(N'[$typename$]') is not null drop type [$typename$]
go
]]>
			</SqlUserTypeGenerator_TypePreCreateCode>

			<!-- custom type post-create code -->
			<SqlUserTypeGenerator_TypePostCreateCode>
<![CDATA[
print '$typename$ type re-created'
]]>
			</SqlUserTypeGenerator_TypePostCreateCode>
		</PropertyGroup>
	</Target>
</Project>
